<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SzlakiTurystyczneNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ExpandedAppBar" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">2</item> <!-- Allows text wrapping for up to 2 lines -->
        <!-- If you want to use ellipsize, you can add the following line -->
        <!-- <item name="android:ellipsize">end</item> -->
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- Customize your style here -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Add more styling attributes if needed -->
    </style>
</resources>